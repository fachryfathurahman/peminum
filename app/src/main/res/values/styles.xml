<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultGender">
        <item name="female_pick">#B0B5B7</item>
        <item name="male_pick">#B0B5B7</item>
    </style>

    <style name="FemalePick" parent="DefaultGender">
        <item name="female_pick">@color/femaleColor</item>
        <item name="male_pick">#B0B5B7</item>
    </style>

    <style name="MalePick">
        <item name="female_pick">#B0B5B7</item>
        <item name="male_pick">@color/maleColor</item>
    </style>

    <declare-styleable name="GenderPick">
        <attr name="female_pick" format="color" />
        <attr name="male_pick" format="color" />
    </declare-styleable>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
